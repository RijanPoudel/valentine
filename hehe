    <script>
        const photos = [
            "https://images.unsplash.com/photo-1518199266791-5375a83190b7?w=600&h=400&fit=crop", // Happy puppy
            "https://images.unsplash.com/photo-1514888286974-6c03e2ca1dba?w=600&h=400&fit=crop", // Sad cat
            "https://images.unsplash.com/photo-1517423440428-a5a00ad493e8?w=600&h=400&fit=crop", // Crying puppy
            "https://images.unsplash.com/photo-1548199973-03cce0bbc87b?w=600&h=400&fit=crop", // Sad dog
            "https://images.unsplash.com/photo-1516734212186-a967f81ad0d7?w=600&h=400&fit=crop", // Lonely cat
            "https://images.unsplash.com/photo-1513003647080-9dfb7e6a0f68?w=600&h=400&fit=crop"  // Really sad puppy
        ];

        const messages = [
            "Please say yes! ü•∫",
            "Are you sure? Look how sad! üò¢",
            "But... but... we'd be so happy! üíî",
            "You're breaking my heart! üò≠",
            "Please reconsider! This is tragic! ü•∫üíî",
            "I'm literally crying right now! üò¢üò¢üò¢"
        ];

        let currentPhotoIndex = 0;
        const photoElement = document.getElementById('photo');
        const messageElement = document.getElementById('message');
        const yesBtn = document.getElementById('yesBtn');
        const noBtn = document.getElementById('noBtn');
        const celebration = document.getElementById('celebration');

        noBtn.addEventListener('click', () => {
            currentPhotoIndex++;
            if (currentPhotoIndex >= photos.length) {
                currentPhotoIndex = photos.length - 1;
            }
            
            photoElement.style.transform = 'scale(0)';
            
            setTimeout(() => {
                photoElement.src = photos[currentPhotoIndex];
                messageElement.textContent = messages[currentPhotoIndex];
                photoElement.style.transform = 'scale(1)';
            }, 300);
            
            // Make Yes button bigger and No button smaller
            const yesScale = 1 + (currentPhotoIndex * 0.15);
            const noScale = 1 - (currentPhotoIndex * 0.1);
            yesBtn.style.transform = `scale(${Math.min(yesScale, 2)})`;
            noBtn.style.transform = `scale(${Math.max(noScale, 0.6)})`;
        });

        yesBtn.addEventListener('click', () => {
            celebration.style.display = 'flex';
            
            // Create confetti effect
            for (let i = 0; i < 50; i++) {
                createHeart();
            }
        });

        function createHeart() {
            const heart = document.createElement('div');
            heart.innerHTML = '‚ù§Ô∏è';
            heart.style.position = 'fixed';
            heart.style.fontSize = Math.random() * 30 + 20 + 'px';
            heart.style.left = Math.random() * 100 + '%';
            heart.style.top = '-50px';
            heart.style.zIndex = '9999';
            heart.style.pointerEvents = 'none';
            document.body.appendChild(heart);
            
            const duration = Math.random() * 3000 + 2000;
            const rotation = Math.random() * 360;
            
            heart.animate([
                { transform: `translateY(0) rotate(0deg)`, opacity: 1 },
                { transform: `translateY(${window.innerHeight + 100}px) rotate(${rotation}deg)`, opacity: 0 }
            ], {
                duration: duration,
                easing: 'linear'
            }).onfinish = () => heart.remove();
        }
    </script>
</body>
